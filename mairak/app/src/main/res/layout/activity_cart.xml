<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aravind.cart.Cart"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/atoolbar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/dashboard_prop"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:textColorSecondary="@color/colorAccent" >

        <ImageView
            android:id="@+id/ivBackarrow"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/white"/>
        <!--   <ImageView
               android:layout_width="120dp"
               android:layout_height="match_parent"
               android:layout_marginLeft="90dp"
               android:src="@drawable/mairak_logo"/>
           -->

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="170sp"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="CART"
            />


        <ImageView
            android:id="@+id/cart"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:visibility="gone"
            android:src="@drawable/logout"/>


    </android.support.v7.widget.Toolbar>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lvCartList"
            android:visibility="gone"
            android:divider="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tvNoCart"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Cart Is Empty"/>

    </LinearLayout>



     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"
         android:background="#262626"
         android:layout_gravity="center"
         android:gravity="center">

         <android.support.v7.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             app:cardElevation="2sp"
             app:cardUseCompatPadding="true"
             app:cardCornerRadius="2sp"
             android:layout_margin="1dp"
             android:layout_marginRight="5sp"
             android:layout_marginLeft="5sp">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="vertical">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="horizontal">


                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:layout_gravity="center">


                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:layout_weight="1"
                         android:layout_marginTop="10sp"
                         android:layout_gravity="center"
                         android:gravity="center"
                         android:orientation="horizontal">

                         <TextView
                             android:id="@+id/tvTotaltxt"
                             android:layout_width="wrap_content"
                             android:layout_height="match_parent"
                             android:layout_marginLeft="20dp"
                             android:layout_marginRight="5dp"
                             android:text="TOTAL"
                             android:layout_gravity="center"
                             android:gravity="center"
                             android:textStyle="bold"
                             android:layout_marginStart="20dp"
                             android:layout_marginEnd="5dp" />

                         <TextView
                             android:id="@+id/tvIncTax"
                             android:layout_width="wrap_content"
                             android:layout_height="match_parent"
                             android:text="inc " />

                         <TextView
                             android:id="@+id/tvTaxValue"
                             android:layout_width="wrap_content"
                             android:layout_height="match_parent"
                             android:text=""/>
                         <TextView
                             android:id="@+id/tvTaxPer"
                             android:layout_width="wrap_content"
                             android:layout_height="match_parent"
                             android:text="% tax "/>


                     </LinearLayout>



                     <TextView
                         android:id="@+id/tvTotalAmt"
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:layout_marginLeft="20dp"
                         android:layout_weight="1"
                         android:layout_marginRight="20dp"
                         android:text="AED. 0.0"
                         android:layout_gravity="center"
                         android:gravity="center"
                         android:layout_marginTop="10dp"
                         android:textStyle="bold"
                         />


                 </LinearLayout>



                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_weight="1
"
                     android:layout_height="wrap_content"
                     android:orientation="vertical">


                     <TextView
                         android:id="@+id/tvNumbertxt"
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:layout_marginLeft="20dp"
                         android:layout_marginTop="10dp"
                         android:layout_weight="1"
                         android:layout_marginRight="20dp"
                         android:text="NUMBERS"
                         android:layout_gravity="center"
                         android:gravity="center"
                         android:textStyle="bold"
                         />

                     <TextView
                         android:id="@+id/tvNumberAmt"
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:layout_marginLeft="20dp"
                         android:layout_weight="1"
                         android:layout_gravity="center"
                         android:gravity="center"
                         android:layout_marginRight="20dp"
                         android:text="0"
                         android:layout_marginTop="10dp"
                         android:textStyle="bold"
                         />

                 </LinearLayout>


             </LinearLayout>


                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="5dp"
                     android:layout_marginLeft="20sp"
                     android:layout_marginStart="20sp"
                     android:layout_marginBottom="5dp"
                     android:orientation="horizontal">

                     <TextView
                         android:id="@+id/havePromo"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/have_a_promo_code" />

                     <TextView
                         android:id="@+id/applyPromo"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="8sp"
                         android:text="@string/apply"
                         android:textStyle="bold"
                         android:textColor="#1e8095"
                         android:textSize="15sp"
                         android:layout_marginStart="8sp" />



                 </LinearLayout>



                 <Button
                     android:id="@+id/btBook"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:text="BOOK"
                     android:background="@drawable/login_button_bg"
                     android:layout_marginBottom="15sp"
                     android:layout_marginLeft="15sp"
                     android:layout_marginRight="15sp"
                     android:layout_marginTop="5dp"
                     android:textColor="@color/white"
                     android:textStyle="bold" />

             </LinearLayout>





         </android.support.v7.widget.CardView>



     </LinearLayout>




</LinearLayout>








</LinearLayout>