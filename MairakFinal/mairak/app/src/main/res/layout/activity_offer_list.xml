<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Order"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/atoolbar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/dashboard_prop"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:textColorSecondary="@color/colorAccent" >

        <ImageView
            android:id="@+id/imbackarrow"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/white"/>
      <!--  <ImageView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:src="@drawable/mairak_logo"/>-->

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="OFFER ORDERS"
            />

        <ImageView
            android:id="@+id/cart"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:visibility="gone"
            android:src="@drawable/logout"/>


    </android.support.v7.widget.Toolbar>



    <ListView
        android:id="@+id/liOrder"
        android:layout_width="match_parent"
        android:divider="@color/transparent"
        android:layout_height="0dp"
        android:layout_weight="2"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:gravity="end"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">


        <LinearLayout
            android:id="@+id/homeLay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/home_menubar"
                android:layout_marginVertical="10sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/offerLay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/offer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/offers_menubar"
                android:layout_marginVertical="10sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/orderLay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/orders_menubar"
                android:layout_marginVertical="10sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/moreLay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/more"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/offerlist"
                android:layout_marginVertical="10sp"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/profileLay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_notifications"
                    android:tint="@color/white"
                    android:layout_marginVertical="10sp"
                    />


                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/badge"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="37dp"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    android:background="@drawable/cart_badge"
                    android:layout_marginStart="37dp"
                    android:gravity="center">


                    <TextView
                        android:id="@+id/notification_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_marginBottom="1dp"
                        android:gravity="center"
                        android:layout_gravity="center"/>


                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>






    </LinearLayout>



</LinearLayout>