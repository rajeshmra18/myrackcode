<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#3d3d3d">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1.2">




                <TextView
                    android:id="@+id/prouctName"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="300ml"/>

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="Quantity : 2 "/>


            </LinearLayout>




            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#393939"
                android:layout_weight="1.2">


                <TextView
                    android:id="@+id/prodDiscription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scrollbars="vertical"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:text="This is the most preferred one in the conference rooms. place them around the conference table, and better decisions will be made" />








            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1.2">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AED. 25 "
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="30sp"
                    android:textColor="@color/white" />


                <android.support.v7.widget.CardView
                    android:id="@+id/reorder"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    app:cardUseCompatPadding="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    app:cardElevation="2dp"
                    android:foregroundGravity="center"
                    app:cardBackgroundColor="@color/colorPrimaryDark">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/prouctName"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_reorder"
                        android:tint="@color/white" />


                </android.support.v7.widget.CardView>


            </LinearLayout>





        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>