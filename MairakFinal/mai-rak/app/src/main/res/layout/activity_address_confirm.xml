<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context="com.mairak.bgi.cart.AddressConfirm">


    <android.support.v7.widget.Toolbar
        android:id="@+id/atoolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"

        android:background="@drawable/dashboard_prop"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:textColorSecondary="@color/colorAccent" >

        <ImageView
            android:id="@+id/ivBackarrow"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/white"/>


        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="170sp"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="@string/app_name"
            />





    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/atoolbar"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10sp">


        <TextView
            android:id="@+id/selectTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_a_delivery_address"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:textSize="18sp"/>



    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainCard"
        android:layout_alignParentTop="true"
       android:layout_marginTop="113sp"
        app:cardUseCompatPadding="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_weight=".3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginRight="10sp"
                    android:layout_marginLeft="2dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="10sp">

                    <RadioButton
                        android:visibility="gone"
                        android:id="@+id/selectRadio"
                        android:checked="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_location_on_black_24dp"
                        android:tint="@color/colorPrimaryDark"/>



                </LinearLayout>


                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNamedef"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tvadd1def"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/tvadd2def"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:id="@+id/tvstatedef"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        />



                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btndeliverdef"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="8sp"
                android:text="Deliver to Default address"
                android:textColor="@color/white"
                android:background="@drawable/login_button_bg"/>


            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <Button
                    android:layout_width="120sp"
                    android:layout_height="40dp"
                    android:text="Edit"
                    android:gravity="center"
                    android:id="@+id/btnEdit"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp" />

                <Button
                    android:layout_width="120sp"
                    android:layout_height="40dp"
                    android:text="Delete"
                    android:id="@+id/btnDelete"
                    android:layout_marginRight="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginBottom="5sp"/>

            </LinearLayout>

        </LinearLayout>








    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainCard"
        app:cardUseCompatPadding="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/headAdd"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_width="match_parent"
                android:layout_height="48sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/addnewTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add a new address"
                    android:textStyle="bold"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="10sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="10sp" />

                <ImageView
                    android:id="@+id/imExpand"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/addnewTv"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@id/addnewTv"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="90sp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:layout_gravity="center"

                    android:layout_alignParentRight="true"
                    android:layout_marginStart="70sp" />


            </RelativeLayout>


            <LinearLayout
                android:id="@+id/formAdd"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/etname"
                            android:layout_width="match_parent"
                            android:layout_height="37dp"
                            android:textSize="16sp"
                            android:hint="Name"/>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/etadd1"
                                android:layout_width="0dp"
                                android:layout_height="37dp"
                                android:textSize="16sp"
                                android:layout_weight="4"
                                android:hint="Address 1"/>

                            <ImageView
                                android:id="@+id/imLocPin"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10sp"
                                android:layout_weight="1"
                                android:src="@drawable/pin1"
                                android:tint="@color/colorPrimaryDark"
                                android:layout_marginStart="10sp" />


                        </LinearLayout>


                        <EditText
                            android:id="@+id/etadd2"
                            android:layout_width="match_parent"
                            android:layout_height="37dp"
                            android:textSize="16sp"
                            android:hint="Address 2"/>
                        <EditText
                            android:id="@+id/etstate"
                            android:layout_width="match_parent"
                            android:layout_height="37dp"
                            android:textSize="16sp"
                            android:hint="State"/>

                        <Button
                            android:id="@+id/btndeliver2"
                            android:layout_width="250dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginBottom="8sp"
                            android:text="Deliver to this address"
                            android:textColor="@color/white"
                            android:background="@drawable/login_button_bg"/>


                    </LinearLayout>


                </ScrollView>





            </LinearLayout>


        </LinearLayout>



    </android.support.v7.widget.CardView>








</RelativeLayout>
