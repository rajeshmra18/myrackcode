<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashBoard"
    android:orientation="vertical"
    >



    <android.support.v7.widget.Toolbar
        android:id="@+id/atoolbar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/dashboard_prop"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:textColorSecondary="@color/colorAccent" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">



            <ImageView
                android:id="@+id/menuico"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/menu"
                android:padding="19dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/HeadMairak"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:text="@string/app_name" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:layout_marginStart="40dp">


                <ImageView
                    android:id="@+id/cart"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/cart_icon"
                    android:tint="@color/white"/>

                <LinearLayout
                    android:id="@+id/llCartBadge"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="18dp"
                    android:background="@drawable/cart_badge"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvCartCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/white"/>



                </LinearLayout>


            </RelativeLayout>



        </LinearLayout>







    </android.support.v7.widget.Toolbar>



