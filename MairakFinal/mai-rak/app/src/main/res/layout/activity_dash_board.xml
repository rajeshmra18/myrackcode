    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="5sp"
        android:layout_weight="12">

        <ListView
            android:id="@+id/prodList"
            android:divider="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:gravity="end"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">


        <LinearLayout
            android:id="@+id/homeLay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


        <ImageView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/home_menubar"
            android:layout_marginVertical="10sp"
            />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/offerLay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


        <ImageView
            android:id="@+id/offer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/offers_menubar"
            android:layout_marginVertical="10sp"
            />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/orderLay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


        <ImageView
            android:id="@+id/order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/orders_menubar"
            android:layout_marginVertical="10sp"
            />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/moreLay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/more"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/offerlist"
                android:layout_marginVertical="10sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/profileLay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_notifications"
                    android:tint="@color/white"
                    android:layout_marginVertical="10sp"
                    />


                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/badge"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="37dp"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    android:background="@drawable/cart_badge"
                    android:layout_marginStart="37dp"
                    android:gravity="center">


                    <TextView
                        android:id="@+id/notification_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_marginBottom="1dp"
                        android:gravity="center"
                        android:layout_gravity="center"/>


                </LinearLayout>

            </RelativeLayout>



        </LinearLayout>






    </LinearLayout>





</LinearLayout>